
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @{
            int m = 10;
            string s = "<h1>demo</h1>";
            string[] data = { "item1", "item2", "item3" };

            @:@@
            <br />
            @:Hello
            <br />
            <text>Hello</text>

        }

        <ul>
            @*@@*@
            <li> 不用轉字串 : @m </li>
            <li> 自動做HTMLEncode : @s </li>
            <li> 不做HTMLEncode: @Html.Raw(s) </li>
        </ul>

        <ul>
            @for (int i = 0; i < data.Length; i++)
            {
                <li>@data[i]</li>
            }
        </ul>

        <ul>
            @foreach (var item in data)
            {
                <li> @item </li>
            }
        </ul>


        @if (true)
        {
            @*@m*@

            @*<text>@m</text>*@

            @:@m
        }


    </div>
</body>
</html>

@model System.Data.DataTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 

        <table border="1">
            <tr>
                <th>@Model.Columns[0].ColumnName </th>
                <th>@Model.Columns[1].ColumnName</th>
                <th></th>
            </tr>
            @foreach (System.Data.DataRow item in Model.Rows)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item["stor_id"]  )</td>
                    <td>@Html.DisplayFor(m => item["stor_name"])</td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item["stor_id"] })
                        @Html.ActionLink("Edit", "Edit", new { id = item["stor_id"] })
                        @Html.ActionLink("Delete", "Delete", new { id = item["stor_id"] })
                    </td>
                </tr>
            }
        </table>

    </div>
</body>
</html>
